{
    "$schema": "https://raw.githubusercontent.com/microsoft/Microsoft-Fabric-tools-workload/main/Workload/app/items/PackageInstallerItem/package/package.schema.json",
    "id": "NewWorkspace",
    "displayName": "Workspace with a Lakehouse",
    "description": "Set up a workspace that will configure every component that is to get started.",
    "icon": "/assets/items/PackageInstallerItem/NewWorkspace/icon.png",
    "deploymentConfig": {
        "type": "UX",
        "location": "NewWorkspace",
        "globalInterceptors" :{
            "default" : {
                "type": "StringReplacement",
                "config" :{
                    "replacements": {
                        "WORKSPACE_ID": "{{WORKSPACE_ID}}",
                        "ITEM_ID": "{{ITEM_ID}}"
                    }
                }
            }
        }
    },
    "items": [
        {
            "type": "Lakehouse",
            "displayName": "MyLakehouse",
            "description": "A lakehouse that contains data.",
            "data": {
                "files": [
                {
                    "path": "Files/info.txt",
                    "payloadType": "AssetLink",
                    "payload": "/assets/items/PackageInstallerItem/NewWorkspace/MyLakehouse/data/info.txt"
                }],
                "interceptor" : {
                    "type": "Reference",
                    "config": {
                        "id": "default"
                    }
                }
            }
        }
    ]
}